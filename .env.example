# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/timeto_do
TEST_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/timeto_do_test

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# Application
DEBUG=True
HOST=127.0.0.1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
PROJECT_NAME=Time to DO
VERSION=0.1.0

# Email (будет добавлено позже)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@timetodo.com
EMAILS_FROM_NAME=Time to DO

# File uploads (Enterprise feature)
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# WebSocket
WEBSOCKET_HEARTBEAT_INTERVAL=30
